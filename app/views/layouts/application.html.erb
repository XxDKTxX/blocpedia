<!DOCTYPE html>
<html>
<head>
    <%= javascript_include_tag :application %>

  <title>Blocpedia</title>
  
   <% if user_signed_in? %>
   Signed in as: <strong><%= current_user.email %></strong> |
   <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to  "Sign out", destroy_user_session_path,:method => :delete, :class => 'navbar-link'  %>
 <% else %>

   <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
   <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
 <% end %>
 
  - <%= link_to "Wiki's", wikis_url, :class => 'navbar-link' %>
  
     <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>
 
</head>
<body>

<%= yield %>

</body>
</html>
