<!DOCTYPE html>
<html>

<head>


<h1>Wikis</h1>

<% if current_user.present? %>
    <div class="row">
        <div class="col-md-4">
            <%= link_to "Make a New Wiki", new_wiki_path, class: 'btn btn-success' %>
        </div>
    </div>
<% end %>

<% @wikis.each do |wiki| %>
    <div class="media">
        <div class="media-body">
            <h4 class="media-heading">
                <%= link_to wiki.title, wiki %>
            </h4>
        </div>
    </div>
<% end %>

 </head>
<body>

<%= yield %>

</body>
</html>

